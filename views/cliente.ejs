            <div class="cita">
                <div class="form-group col-md-6">
                    <h2>Registrar Cita</h2>
                    <form action="/misCitas" method="POST">
                        <input id="id" name="id" value="" hidden>
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" value="" name="nombre" tabindex="1">
                        <label for="nombre" class="form-label">Correo</label>
                        <input type="text" class="form-control" id="correo" value="" name="correo" tabindex="1">
                        <label for="especialidad" class="form-label">Tipo de especialidad</label>
                   <select name="especialidad" id="especialidad" class="form-control">
                    <option value="1" selected>Odontología</option>
                    <option value="4" selected>Oftalmología</option>
                    <option value="5" selected>Medicina General</option>
                    <option value="2" selected>Cardiología</option>
                    </select>
                    <label for="exampleFormControlTextarea1">Motivo</label>
                    <textarea type="text" class="form-control" id="mensaje" name="mensaje" rows="3"></textarea><br>
                    <span class="details">Fecha de cita</span>
                    <input type="date" name="date" id="start" name="trip-start" value="2021-12-01" min="2021-01-01" max="2021-11-31" required>
                    <br><br>
                    <div class="button">
                        <input class="btn btn-primary" type="submit" value="Realizar">
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </div>
                    
                    </form>
                    
                </div>
            </div>
     

